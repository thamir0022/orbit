{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "api#dev": {
      "env": [
        "NODE_ENV",
        "PORT", 
        "CORS_ORIGINS", 
        "MONGODB_URI", 
        "MONGODB_DB_NAME", 
        "REDIS_URL", 
        "REDIS_USERNAME", 
        "REDIS_PASSWORD", 
        "JWT_SECRET", 
        "JWT_EXPIRES_IN"
      ]
    }
  }
}
